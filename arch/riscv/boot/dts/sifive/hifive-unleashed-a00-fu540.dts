/dts-v1/;

#include "fu540-c000.dtsi"

/ {
	#address-cells = <2>;
	#size-cells = <2>;
	model = "SiFive HiFive Unleashed A00 (FU540-C000)";
	compatible = "sifive,hifive-unleashed-a00-fu540",
		"sifive,hifive-unleashed-fu540";

	chosen {
	};

	memory@80000000 {
		device_type = "memory";
		reg = <0x0 0x80000000 0x1f 0x80000000>;
	};

	soc {
		hfclk: hfclk {
			#clock-cells = <0>;
			compatible = "fixed-clock";
			clock-frequency = <33333333>;
			clock-output-names = "hfclk";
		};
		rtcclk: rtcclk {
			#clock-cells = <0>;
			compatible = "fixed-clock";
			clock-frequency = <1000000>;
			clock-output-names = "rtcclk";
		};
		gpio-restart {
			compatible = "gpio-restart";
			gpios = <&gpio0 10 1>;
		};
		pwmleds {
			compatible = "pwm-leds";
			heartbeat {
				pwms = <&pwm0 0 0>;
				max-brightness = <255>;
				linux,default-trigger = "heartbeat";
			};
			mtd {
				pwms = <&pwm0 1 0>;
				max-brightness = <255>;
				linux,default-trigger = "mtd";
			};
			netdev {
				pwms = <&pwm0 2 0>;
				max-brightness = <255>;
				linux,default-trigger = "netdev";
			};
			panic {
				pwms = <&pwm0 3 0>;
				max-brightness = <255>;
				linux,default-trigger = "panic";
			};
		};
	};
};

&qspi0 {
	#address-cells = <1>;
	#size-cells = <0>;
	flash@0 {
		compatible = "issi,is25wp256d", "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <50000000>;
		m25p,fast-read;
		spi-tx-bus-width = <4>;
		spi-rx-bus-width = <4>;
	};
};

&qspi2 {
	#address-cells = <1>;
	#size-cells = <0>;
	mmc-slot@0 {
		compatible = "sifive,hifive-unleashed-fu540-mmc-slot", "mmc-spi-slot";
		reg = <0>;
		voltage-ranges = <3300 3300>;
		spi-max-frequency = <20000000>;
		disable-wp;
		gpios = <&gpio0 11 1>;
		#address-cells = <1>;
		#size-cells = <0>;
	};
};

&gemgxl0 {
	#address-cells = <1>;
	#size-cells = <0>;
	phy1: vsc8541@0 {
		reg = <0>;
		reset-gpios = <&gpio0 12 1>;
	};
};
